<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    
                 
                          
                                                                                    
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground" android:tag="layout/item_search_address_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/item_address_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:tag="binding_1"            
            android:textColor="@color/black"
            android:textSize="18sp"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="@id/item_address_image"
            app:layout_constraintBottom_toBottomOf="@id/item_address_image"
            app:layout_constraintStart_toEndOf="@id/item_address_image"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ㅍㅡㄹ레이스"/>

        <TextView
            android:id="@+id/item_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tag="binding_2"              
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            tools:text="주소"
            app:layout_constraintTop_toBottomOf="@id/item_address_image"
            app:layout_constraintStart_toStartOf="@id/item_keyword"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

         