<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="address"
            type="com.goldcompany.koreabike.domain.model.address.Address" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_item_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_search_button"
            app:layout_constraintEnd_toStartOf="@+id/place_item_keyword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/place_item_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{address.placeName}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/place_item_drawable"
            app:layout_constraintEnd_toStartOf="@+id/place_item_delete"
            app:layout_constraintStart_toEndOf="@+id/place_item_drawable"
            app:layout_constraintTop_toTopOf="@+id/place_item_drawable"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="NestedWeights"
            tools:text="장소명장소명장소명장소명장소명장소명장소명장소명장소명장소명장소명장소명" />

        <TextView
            android:id="@+id/place_item_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{address.addressName}"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/place_item_keyword"
            app:layout_constraintStart_toStartOf="@+id/place_item_keyword"
            app:layout_constraintTop_toBottomOf="@+id/place_item_keyword"
            tools:text="주소명주소명주소명주소명주소명주소명주소명주소명주소명주소명주소명주소명주소명" />

        <ImageButton
            android:id="@+id/place_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_delete_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/place_item_keyword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>